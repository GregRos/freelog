{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "lib": ["es6"],
    "allowUnreachableCode": true,
    "importHelpers": true,
    "outDir": "dist"
  },
  "exclude": [ "node_modules"]
}
